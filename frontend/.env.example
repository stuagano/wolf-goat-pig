# Wolf Goat Pig Frontend Environment Variables
# Copy this file to .env.local for local development

# ============================================================================
# BACKEND API CONFIGURATION
# ============================================================================
# CRITICAL: This must be set in Vercel dashboard for production deployments
# Local development: Leave empty (uses proxy from package.json)
# Production: Set to https://wolf-goat-pig.onrender.com in Vercel dashboard
REACT_APP_API_URL=

# ============================================================================
# AUTH0 CONFIGURATION
# ============================================================================
REACT_APP_AUTH0_DOMAIN=dev-jm88n088hpt7oe48.us.auth0.com
REACT_APP_AUTH0_CLIENT_ID=qAZuRv5E9mPQ9uTGg7NWpkpfVj8bCeoB
REACT_APP_AUTH0_AUDIENCE=https://api.wolf-goat-pig.com

# Use mock authentication for local development (true/false)
REACT_APP_USE_MOCK_AUTH=true

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================
# Enable analytics tracking
REACT_APP_ENABLE_ANALYTICS=false

# Use mock data for simulation mode
REACT_APP_SIMULATION_USE_MOCKS=false

# ============================================================================
# DEPLOYMENT METADATA (Optional)
# ============================================================================
# Deployment platform (auto-detected but can be overridden)
REACT_APP_DEPLOY_PLATFORM=local

# Frontend origin (used by backend for CORS)
REACT_APP_FRONTEND_ORIGIN=http://localhost:3000

# ============================================================================
# DEVELOPMENT SERVER (Optional)
# ============================================================================
# Port for local development server
PORT=3001

