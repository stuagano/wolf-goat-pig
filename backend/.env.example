# Wolf-Goat-Pig Application Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment type: development, production, testing
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Enable debug mode (development only)
DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL - leave empty to use SQLite
# For PostgreSQL: postgresql://username:password@host:port/database
# For SQLite: sqlite:///./wolf_goat_pig.db
DATABASE_URL=

# Skip data seeding on startup (useful for testing)
SKIP_SEEDING=false

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# GHIN API credentials (optional - for player handicap lookup)
GHIN_API_USER=
GHIN_API_PASS=
GHIN_API_STATIC_TOKEN=ghincom

# Email service configuration (optional - for notifications)
# For Gmail, generate App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Wolf Goat Pig - Wing Point Golf Club

# =============================================================================
# SECURITY SETTINGS (Production)
# =============================================================================

# Allowed hosts for CORS (comma-separated)
# Leave empty for development to allow all origins
ALLOWED_ORIGINS=

# JWT secret key (for future authentication features)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Database connection pool settings
DB_POOL_SIZE=5
DB_POOL_OVERFLOW=10
DB_POOL_RECYCLE=300

# Monte Carlo simulation settings
MAX_SIMULATION_TIME_MS=25.0
DEFAULT_SIMULATION_COUNT=5000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
ENABLE_ODDS_CALCULATION=true
ENABLE_PLAYER_PROFILES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_COURSE_IMPORT=true

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Render.com specific settings
RENDER=false
RENDER_EXTERNAL_HOSTNAME=

# Health check settings
HEALTH_CHECK_TIMEOUT=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable auto-reload (development only)
AUTO_RELOAD=true

# Enable API documentation endpoints
ENABLE_DOCS=true

# Seed sample data for development
SEED_SAMPLE_DATA=true