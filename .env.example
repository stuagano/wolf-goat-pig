# Production Environment Variables Template
# Copy to .env for local development or set in production deployment

# Environment Configuration
ENVIRONMENT=development
# Set to 'production' for production deployments

# Database Configuration
DATABASE_URL=sqlite:///./reports/wolf_goat_pig.db
# Production: postgresql://user:password@host:5432/wolf_goat_pig

# Auth0 Configuration (Required for production)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_API_AUDIENCE=your-api-audience
AUTH0_CLIENT_ID=your-client-id

# API Configuration
FRONTEND_URL=http://localhost:3000
WGP_API_BASE=http://localhost:8000
WGP_API_HOST=0.0.0.0
WGP_API_PORT=8000
# Production: https://wolf-goat-pig.vercel.app

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# GHIN Integration (Optional - app works fine without this)
GHIN_API_USER=your-ghin-user
GHIN_API_PASS=your-ghin-password
GHIN_API_STATIC_TOKEN=your-ghin-token

# Security
JWT_SECRET_KEY=your-jwt-secret-key-for-local-tokens

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_GHIN_INTEGRATION=false
ENABLE_ANALYTICS=true

# Legacy tee sheet bridge (optional)
LEGACY_SIGNUP_SYNC_ENABLED=false
LEGACY_SIGNUP_CREATE_URL=https://thousand-cranes.com/WolfGoatPig/wgp_tee_sheet.cgi
LEGACY_SIGNUP_UPDATE_URL=
LEGACY_SIGNUP_CANCEL_URL=
LEGACY_SIGNUP_API_KEY=
LEGACY_SIGNUP_TIMEOUT_SECONDS=10
LEGACY_SIGNUP_PAYLOAD_FORMAT=form
LEGACY_SIGNUP_FIELD_MAP={}
LEGACY_SIGNUP_EXTRA_FIELDS={}
LEGACY_SIGNUP_CREATE_ACTION_FIELD=action
LEGACY_SIGNUP_CREATE_ACTION_VALUE=add
LEGACY_SIGNUP_UPDATE_ACTION_FIELD=action
LEGACY_SIGNUP_UPDATE_ACTION_VALUE=update
LEGACY_SIGNUP_CANCEL_ACTION_FIELD=action
LEGACY_SIGNUP_CANCEL_ACTION_VALUE=cancel
