# Production Environment Variables Template
# Copy to .env for local development or set in production deployment

# Environment Configuration
ENVIRONMENT=development
# Set to 'production' for production deployments

# =============================================================================
# Docker Configuration (used by docker-compose)
# =============================================================================
# PostgreSQL settings for Docker
POSTGRES_PASSWORD=wgp_secure_password_change_me
POSTGRES_PORT=5432

# Port mappings (change if you have conflicts)
BACKEND_PORT=8000
FRONTEND_PORT=3000

# =============================================================================
# Database Configuration
# =============================================================================
# For Docker: Leave commented - docker-compose.yml builds the URL automatically
# DATABASE_URL=postgresql://wolf_goat_pig_user:${POSTGRES_PASSWORD}@postgres:5432/wolf_goat_pig

# For local development without Docker (SQLite):
# DATABASE_URL=sqlite:///./reports/wolf_goat_pig.db

# For production (Render): Set in Render dashboard
# DATABASE_URL=postgresql://user:password@host:5432/wolf_goat_pig

# Auth0 Configuration (Required for production)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_API_AUDIENCE=your-api-audience
AUTH0_CLIENT_ID=your-client-id

# API Configuration
FRONTEND_URL=http://localhost:3000
PUBLIC_FRONTEND_URL=http://localhost:3000
FRONTEND_BASE_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
HOST=0.0.0.0
PORT=8000
# Production URLs:
# FRONTEND_URL=https://wolf-goat-pig.vercel.app
# BACKEND_URL=https://wolf-goat-pig.onrender.com

# React App Configuration (build-time variables for frontend)
REACT_APP_API_URL=http://localhost:8000
REACT_APP_AUTH0_DOMAIN=your-domain.auth0.com
REACT_APP_AUTH0_CLIENT_ID=your-client-id
REACT_APP_AUTH0_AUDIENCE=http://localhost:8000
REACT_APP_USE_MOCK_AUTH=false
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_DEPLOY_PLATFORM=docker

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Wolf Goat Pig - Wing Point Golf Club

# GHIN Integration (Optional - app works fine without this)
GHIN_API_USER=your-ghin-user
GHIN_API_PASS=your-ghin-password
GHIN_API_STATIC_TOKEN=your-ghin-token

# Security
JWT_SECRET_KEY=your-jwt-secret-key-for-local-tokens

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_GHIN_INTEGRATION=false
ENABLE_ANALYTICS=true
ENABLE_TEST_ENDPOINTS=false
# Frontend Simulation Debugging
REACT_APP_SIMULATION_USE_MOCKS=false
REACT_APP_SIMULATION_MOCK_PRESET=default
# Sunday game configuration
SUNDAY_GAME_RANDOM_SEED=

# Legacy tee sheet bridge (optional)
LEGACY_SIGNUP_SYNC_ENABLED=false
LEGACY_SIGNUP_CREATE_URL=https://thousand-cranes.com/WolfGoatPig/wgp_tee_sheet.cgi
LEGACY_SIGNUP_UPDATE_URL=
LEGACY_SIGNUP_CANCEL_URL=
LEGACY_SIGNUP_API_KEY=
LEGACY_SIGNUP_TIMEOUT_SECONDS=10
LEGACY_SIGNUP_PAYLOAD_FORMAT=form
LEGACY_SIGNUP_FIELD_MAP={}
LEGACY_SIGNUP_EXTRA_FIELDS={}
LEGACY_SIGNUP_CREATE_ACTION_FIELD=action
LEGACY_SIGNUP_CREATE_ACTION_VALUE=add
LEGACY_SIGNUP_UPDATE_ACTION_FIELD=action
LEGACY_SIGNUP_UPDATE_ACTION_VALUE=update
LEGACY_SIGNUP_CANCEL_ACTION_FIELD=action
LEGACY_SIGNUP_CANCEL_ACTION_VALUE=cancel
