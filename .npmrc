# NPM Configuration for Vercel Deployment
# This ensures consistent dependency resolution

# Use legacy peer deps to avoid React 19 compatibility issues
legacy-peer-deps=true

# Prefer offline cache when available
prefer-offline=true

# Skip audit during install to speed up builds
audit=false

# Strict SSL
strict-ssl=true

# Increase timeout for slow networks
fetch-timeout=300000

# Engine strict to respect package.json engines field
engine-strict=true
